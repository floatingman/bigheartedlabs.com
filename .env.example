# BigHearted Labs - Environment Variables
# Copy this file to .env.local for local development
# Copy this file to .env for Docker deployment

# Company Information
COMPANY_NAME="BigHearted Labs"
TAGLINE="Expert Test Automation & CI/CD Solutions"
CONTACT_EMAIL="contact@bigheartedlabs.com"
FOOTER_TEXT="All rights reserved."

# Deployment Configuration (for manual deployment)
DEPLOY_USER="ubuntu"
DEPLOY_HOST="your-domain.com"
DEPLOY_PATH="/var/www/bigheartedlabs"
SSH_KEY_PATH="$HOME/.ssh/id_rsa"

# Docker/Traefik Configuration
# Domain for your website
DOMAIN=bigheartedlabs.com

# Set to 'true' to enable www subdomain routing
WWW_DOMAIN=true

# Traefik network name (must match your Traefik docker network)
TRAEFIK_NETWORK=traefik

# Certificate resolver name (must match your Traefik cert resolver)
CERT_RESOLVER=letsencrypt
